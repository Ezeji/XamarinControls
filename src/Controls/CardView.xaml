<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="IntelliAbb.Xamarin.Controls.CardView"
             x:Name="this"
             Padding="4">

    <StackLayout>
        <!-- Icon & Title -->
        <StackLayout x:Name="IconTitleGrid" Orientation="Horizontal">

            <Image Source="{Binding Icon, Source={x:Reference this}}" 
               Aspect="AspectFit" 
               HeightRequest="30"/>

            <Label 
               Text="{Binding Title, Source={x:Reference this}}" 
               Style="{Binding TitleStyle, Source={x:Reference this}}" 
               HorizontalTextAlignment="Start" 
               VerticalTextAlignment="Center"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center"  
               HeightRequest="30"/>
        </StackLayout>

        <!-- Content -->
        <ContentPresenter Content="{Binding CardContent, Source={x:Reference this}}"/>

    </StackLayout>
</Frame>
